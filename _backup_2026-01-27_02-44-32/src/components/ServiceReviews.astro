</section>

<style>
  .reviews {
    padding: 4rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    color: #333;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .review-card {
    background: #f9f9f9;
    padding: 1.8rem;
    border-radius: 10px;
    border-left: 4px solid var(--brand-600);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(var(--brand-600-rgb), 0.15);
  }

  .stars {
    margin-bottom: 1rem;
  }

  .star {
    color: #ffc107;
    font-size: 1.3rem;
    margin-right: 0.2rem;
  }

  .review-text {
    color: #333;
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 1rem 0;
    font-style: italic;
  }

  .reviewer {
    color: var(--brand-700);
    font-weight: 600;
    margin: 0.8rem 0 0.3rem 0;
  }

  .date {
    color: #999;
    font-size: 0.85rem;
    margin: 0;
  }

  .google-badge {
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(var(--brand-600-rgb), 0.10) 0%,
      rgba(var(--brand-800-rgb), 0.10) 100%
    );
    padding: 2rem;
    border-radius: 10px;
    border: 2px solid var(--brand-600);
  }

  .google-badge p {
    margin: 0;
    color: #333;
    font-weight: 600;
    font-size: 1.1rem;
  }

  @media (max-width: 1024px) {
    .reviews {
      padding: 3rem 2rem;
    }

    .section-header h2 {
      font-size: 2.2rem;
    }
  }

  @media (max-width: 768px) {
    .reviews {
      padding: 2.5rem 1.5rem;
    }

    .section-header h2 {
      font-size: 1.8rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
    }

    .review-card {
      padding: 1.5rem;
    }

    .review-text {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .reviews {
      padding: 2rem 1rem;
    }

    .section-header h2 {
      font-size: 1.5rem;
    }

    .review-card {
      padding: 1.2rem;
    }

    .google-badge {
      padding: 1.5rem;
    }

    .google-badge p {
      font-size: 0.95rem;
    }
  }
</style>
