<style>
  .faq {
    padding: 4rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    color: #333;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }

  .faq-list {
    max-width: 900px;
    margin: 0 auto;
  }

  .faq-item {
    border-bottom: 1px solid #eee;
    margin-bottom: 0;
  }

  .faq-item:last-child {
    border-bottom: none;
  }

  .faq-question {
    width: 100%;
    padding: 1.5rem;
    background: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    font-size: 1.05rem;
    color: #333;
    font-weight: 600;
  }

  .faq-question:hover {
    background: #f9f9f9;
    padding-left: 2rem;
  }

  .question-text {
    flex-grow: 1;
    text-align: left;
  }

  .icon {
    font-size: 1.5rem;
    color: var(--brand-700);
    flex-shrink: 0;
    margin-left: 1rem;
    transition: transform 0.3s ease;
  }

  .faq-item.active .icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background: #f9f9f9;
  }

  .faq-item.active .faq-answer {
    max-height: 500px;
  }

  .faq-answer p {
    padding: 0 1.5rem 1.5rem 1.5rem;
    color: #555;
    line-height: 1.7;
    margin: 0;
    font-size: 0.95rem;
  }

  @media (max-width: 1024px) {
    .faq {
      padding: 3rem 2rem;
    }

    .section-header h2 {
      font-size: 2.2rem;
    }
  }

  @media (max-width: 768px) {
    .faq {
      padding: 2.5rem 1.5rem;
    }

    .section-header h2 {
      font-size: 1.8rem;
    }

    .faq-question {
      padding: 1.2rem;
      font-size: 0.95rem;
    }

    .faq-question:hover {
      padding-left: 1.5rem;
    }

    .faq-answer p {
      padding: 0 1.2rem 1.2rem 1.2rem;
      font-size: 0.9rem;
    }

    .icon {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .faq {
      padding: 2rem 1rem;
    }

    .section-header h2 {
      font-size: 1.5rem;
    }

    .faq-question {
      padding: 1rem;
      font-size: 0.9rem;
    }

    .faq-answer p {
      padding: 0 1rem 1rem 1rem;
      font-size: 0.85rem;
    }

    .icon {
      font-size: 1.2rem;
      margin-left: 0.5rem;
    }
  }
</style>

<script>
  const faqItems = document.querySelectorAll('.faq-item');
  
  faqItems.forEach(item => {
    const question = item.querySelector('.faq-question');
    
    question.addEventListener('click', () => {
      // Cerrar otros items
      faqItems.forEach(otherItem => {
        if (otherItem !== item) {
          otherItem.classList.remove('active');
        }
      });
      
      // Toggle item actual
      item.classList.toggle('active');
    });
  });
</script>
