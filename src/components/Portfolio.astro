<style>
  .portfolio {
    padding: 4rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    color: #333;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    align-items: stretch;
  }

  .portfolio-note {
    background: linear-gradient(
      135deg,
      rgba(var(--brand-600-rgb), 0.10) 0%,
      rgba(var(--brand-800-rgb), 0.10) 100%
    );
    border-left: 4px solid var(--brand-600);
    padding: 2rem;
    border-radius: 5px;
    text-align: center;
  }

  .portfolio-note p {
    margin: 0 0 1rem 0;
    color: #333;
    font-size: 1.1rem;
  }

  .cta-link {
    display: inline-block;
    padding: 0.8rem 2rem;
    background: linear-gradient(135deg, var(--brand-gradient-start) 0%, var(--brand-gradient-end) 100%);
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .cta-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(var(--brand-600-rgb), 0.30);
  }

  @media (max-width: 1024px) {
    .portfolio {
      padding: 3rem 2rem;
    }

    .section-header h2 {
      font-size: 2.2rem;
    }

    .portfolio-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .portfolio {
      padding: 2.5rem 1.5rem;
    }

    .section-header h2 {
      font-size: 1.8rem;
    }

    .section-header p {
      font-size: 0.95rem;
    }

    .portfolio-grid {
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }

    .portfolio-note {
      padding: 1.5rem;
    }

    .portfolio-note p {
      font-size: 0.95rem;
      margin-bottom: 0.8rem;
    }

    .cta-link {
      padding: 0.7rem 1.5rem;
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio {
      padding: 2rem 1rem;
    }

    .container {
      padding: 0 1rem;
    }

    .section-header h2 {
      font-size: 1.5rem;
      margin-bottom: 0.8rem;
    }

    .section-header p {
      font-size: 0.85rem;
    }

    .portfolio-grid {
      gap: 1rem;
      grid-template-columns: 1fr;
    }

    .portfolio-note {
      padding: 1.2rem;
    }

    .portfolio-note p {
      font-size: 0.85rem;
      margin-bottom: 0.8rem;
    }

    .cta-link {
      padding: 0.6rem 1.2rem;
      font-size: 0.85rem;
    }
  }
</style>
