    .contact {
      padding: 2.5rem 1.5rem;
    }

    .section-header h2 {
      font-size: 1.8rem;
    }

    .section-header p {
      font-size: 0.95rem;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .contact-form {
      gap: 1rem;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      padding: 12px;
      font-size: 16px;
      min-height: 44px;
    }

    .submit-btn {
      padding: 12px;
      font-size: 1rem;
      min-height: 48px;
    }
  }

