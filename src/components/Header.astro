<header class="header">
  <div class="container">
    <div class="header-content">
      <a class="brand" href="/" aria-label="HMMCODE">
        <span class="brand-name">HMMCODE</span>
      </a>

      <nav
        class="nav"
        aria-label="Navegaci√≥n principal"
        data-i18n-attr="aria-label"
        data-i18n-es="Navegaci√≥n principal"
        data-i18n-en="Main navigation"
      >
        <ul>
          <li><a href="/" data-i18n="home">Inicio</a></li>
          <li><a href="/#servicios" data-i18n="services">Servicios</a></li>
          <li><a href="/servicio-formateo" data-i18n="format">Formateo</a></li>
          <li><a href="/#portfolio" data-i18n="portfolio">Portafolio</a></li>
          <li><a href="/#contacto" data-i18n="contact">Contacto</a></li>
        </ul>
      </nav>

      <div
        class="controls"
        aria-label="Preferencias"
        data-i18n-attr="aria-label"
        data-i18n-es="Preferencias"
        data-i18n-en="Preferences"
        data-i18n-pt="Prefer√™ncias"
      >
        <button class="control-btn control-btn--dark" type="button" id="darkToggle" aria-pressed="false" title="Modo oscuro">
          üåô
        </button>
        <button class="control-btn control-btn--lang" type="button" id="langToggle" aria-label="Cambiar idioma" data-lang="es" title="Idioma">
          ES
        </button>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  const STORAGE_LANG_KEY = 'hmm_lang';
  const STORAGE_DARK_KEY = 'hmm_dark';

  const i18n = {
    es: {
      home: 'Inicio',
      services: 'Servicios',
      format: 'Formateo',
      portfolio: 'Portafolio',
      contact: 'Contacto',
      contrast: 'Contraste',
      langAria: 'Cambiar idioma',
    },
    en: {
      home: 'Home',
      services: 'Services',
      format: 'Format',
      portfolio: 'Portfolio',
      contact: 'Contact',
      contrast: 'Contrast',
      langAria: 'Change language',
    },
    pt: {
      home: 'In√≠cio',
      services: 'Servi√ßos',
      format: 'Formata√ß√£o',
      portfolio: 'Portf√≥lio',
      contact: 'Contato',
      contrast: 'Contraste',
      langAria: 'Mudar idioma',
    },
  };

  function translateInlineElements(lang) {
    const selector = '[data-i18n-es],[data-i18n-en],[data-i18n-pt]';

    document.querySelectorAll(selector)?.forEach((el) => {
      const valueEs = el.getAttribute('data-i18n-es');
      const valueEn = el.getAttribute('data-i18n-en');
      const valuePt = el.getAttribute('data-i18n-pt');
      
      let nextValue;
      if (lang === 'pt') {
        // Si es portugu√©s, usar PT si existe, si no usar EN como fallback
        nextValue = valuePt ?? valueEn ?? valueEs;
      } else if (lang === 'en') {
        nextValue = valueEn ?? valueEs ?? valuePt;
      } else {
        nextValue = valueEs ?? valueEn ?? valuePt;
      }
      
      if (!nextValue) return;

      const targetAttr = el.getAttribute('data-i18n-attr');
      if (targetAttr) {
        el.setAttribute(targetAttr, nextValue);
        return;
      }

      if (el.hasAttribute('data-i18n-html')) {
        el.innerHTML = nextValue;
        return;
      }

      el.textContent = nextValue;
    });
  }

  function applyLanguage(lang) {
    const dict = i18n[lang] ?? i18n.es;
    document.documentElement.dataset.lang = lang;
    document.documentElement.lang = lang;
    document.querySelectorAll('[data-i18n]')?.forEach((el) => {
      const key = el.getAttribute('data-i18n');
      if (key && dict[key]) el.textContent = dict[key];
    });

    // Actualizar href de botones de las cards (soportar 3 idiomas)
    document.querySelectorAll('[data-cta-link-es][data-cta-link-en]')?.forEach((el) => {
      let href;
      if (lang === 'pt') {
        // Para portugu√©s, usar PT si existe, si no EN como fallback
        href = el.hasAttribute('data-cta-link-pt') ? el.getAttribute('data-cta-link-pt') : el.getAttribute('data-cta-link-en');
      } else if (lang === 'en') {
        href = el.getAttribute('data-cta-link-en');
      } else {
        href = el.getAttribute('data-cta-link-es');
      }
      if (href) el.setAttribute('href', href);
    });

    translateInlineElements(lang);

    const langBtn = document.getElementById('langToggle');
    if (langBtn) {
      const langDisplay = lang === 'pt' ? 'PT' : lang.toUpperCase();
      langBtn.textContent = langDisplay;
      langBtn.setAttribute('aria-label', dict.langAria);
      langBtn.setAttribute('data-lang', lang);
    }

    try {
      window.dispatchEvent(new CustomEvent('hmm:langchange', { detail: { lang } }));
    } catch {
      // no-op
    }
  }

  function applyDarkMode(isDark) {
    if (isDark) {
      document.documentElement.dataset.theme = 'dark';
    } else {
      delete document.documentElement.dataset.theme;
    }
    const btn = document.getElementById('darkToggle');
    if (btn) btn.setAttribute('aria-pressed', String(Boolean(isDark)));
  }

  function initNavbarPrefs() {
    const savedLang = localStorage.getItem(STORAGE_LANG_KEY) || 'es';
    const savedDark = localStorage.getItem(STORAGE_DARK_KEY) === 'true';

    applyLanguage(savedLang);
    applyDarkMode(savedDark);

    const darkBtn = document.getElementById('darkToggle');
    const langBtn = document.getElementById('langToggle');

    darkBtn?.addEventListener('click', () => {
      const isDark = document.documentElement.dataset.theme === 'dark';
      const next = !isDark;
      applyDarkMode(next);
      localStorage.setItem(STORAGE_DARK_KEY, String(next));
    });

    langBtn?.addEventListener('click', () => {
      const current = (localStorage.getItem(STORAGE_LANG_KEY) || 'es').toLowerCase();
      const next = current === 'es' ? 'en' : current === 'en' ? 'pt' : 'es';
      localStorage.setItem(STORAGE_LANG_KEY, next);
      applyLanguage(next);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavbarPrefs);
  } else {
    initNavbarPrefs();
  }
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(0, 0, 0, 0.72);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: white;
    padding: 0.9rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.10);
  }

  .header::after {
    content: '';
    display: block;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(var(--brand-600-rgb), 0.85) 50%, transparent 100%);
    opacity: 0.6;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.25rem;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: white;
    text-decoration: none;
    min-height: 44px;
    padding: 6px 2px;
  }

  .brand-name {
    font-size: 1.08rem;
    font-weight: 800;
    letter-spacing: 0.01em;
    line-height: 1;
  }

  .controls {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
  }

  .control-btn {
    appearance: none;
    background: rgba(255, 255, 255, 0.08);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 999px;
    padding: 8px 12px;
    font-weight: 600;
    font-size: 0.9rem;
    line-height: 1;
    cursor: pointer;
    min-height: 44px;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .control-btn:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.18);
  }

  .control-btn:focus-visible {
    outline: 2px solid rgba(var(--brand-600-rgb), 0.95);
    outline-offset: 2px;
  }

  /* Contraste alto: sin cambiar la paleta base, solo sube legibilidad */
  :global(html[data-contrast="high"]) .header {
    background: rgba(0, 0, 0, 0.88);
    border-bottom-color: rgba(255, 255, 255, 0.18);
  }

  :global(html[data-contrast="high"]) .nav a {
    opacity: 1;
  }

  .nav ul {
    list-style: none;
    display: flex;
    gap: 1.6rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    opacity: 0.92;
    transition: opacity 0.2s ease;
    /* Touch target m√≠nimo 44px */
    padding: 8px 4px;
    display: inline-block;
    font-size: 0.95rem;
    position: relative;
  }

  .nav a:hover {
    opacity: 1;
  }

  .nav a::after {
    content: '';
    position: absolute;
    left: 4px;
    right: 4px;
    bottom: 2px;
    height: 2px;
    border-radius: 999px;
    background: rgba(var(--brand-600-rgb), 0.95);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.2s ease;
  }

  .nav a:hover::after {
    transform: scaleX(1);
  }

  /* Optimizaci√≥n para iOS (iPhone 13-15, incluyendo Pro Max) */
  @supports (padding: max(0px)) {
    .header {
      padding-left: max(1rem, env(safe-area-inset-left));
      padding-right: max(1rem, env(safe-area-inset-right));
    }
  }

  @media (max-width: 1024px) {
    .header {
      padding: 0.85rem 0;
    }

    .nav ul { gap: 1.1rem; }
  }

  /* iPad Mini / Tablets peque√±os */
  @media (max-width: 767px) {
    .header {
      padding: 0.8rem 0;
    }

    .header-content {
      /* En m√≥vil: logo + controles en la misma fila; nav abajo */
      flex-direction: row;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: center;
    }

    .brand {
      order: 1;
      justify-content: flex-start;
      min-height: 40px;
    }

    .controls {
      order: 2;
      margin-left: auto;
      justify-content: flex-end;
      flex-wrap: nowrap;
      gap: 0.45rem;
    }

    .nav {
      order: 3;
      flex-basis: 100%;
      width: 100%;
    }

    .nav ul {
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .nav a {
      font-size: 0.9rem;
      padding: 10px 8px;
      /* Touch target 44px m√≠nimo */
      min-height: 44px;
      display: flex;
      align-items: center;
    }

    .control-btn {
      font-size: 0.82rem;
      padding: 6px 10px;
      min-height: 40px;
    }

    .control-btn--lang {
      padding: 6px 10px;
      min-width: 44px;
      justify-content: center;
    }
  }

  /* Samsung Galaxy S24, Android phones modernos */
  @media (max-width: 479px) {
    .header {
      padding: 0.75rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .brand-name { font-size: 0.98rem; }

    .brand {
      min-height: 38px;
    }

    .nav ul {
      gap: 0.8rem;
      font-size: 0.85rem;
    }

    .nav a {
      font-size: 0.8rem;
      padding: 12px 6px;
      min-height: 44px;
    }

    .controls {
      gap: 0.4rem;
    }

    .control-btn {
      font-size: 0.78rem;
      padding: 6px 9px;
      min-height: 38px;
    }

    .control-btn--contrast {
      padding-left: 9px;
      padding-right: 9px;
    }

    .control-btn--lang {
      min-width: 40px;
      padding-left: 9px;
      padding-right: 9px;
    }
  }

  /* iPhone 13/14/15 portrait (390px) */
  @media (max-width: 389px) {
    .nav ul {
      gap: 0.7rem;
    }

    .nav a {
      font-size: 0.77rem;
      padding: 10px 5px;
    }

    .control-btn {
      font-size: 0.75rem;
    }
  }

  /* Ultra peque√±o: 360px y menos */
  @media (max-width: 359px) {
    .nav ul {
      gap: 0.6rem;
    }

    .nav a {
      font-size: 0.75rem;
      padding: 10px 4px;
    }
  }

  /* Optimizaci√≥n para orientaci√≥n horizontal (landscape) */
  @media (max-height: 500px) {
    .header {
      padding: 0.55rem 0;
    }

    .header-content {
      gap: 0.5rem;
    }

    .nav ul {
      gap: 0.8rem;
    }
  }

  /* Dark Mode Styles */
  :global(html[data-theme="dark"]) .header {
    background: rgba(20, 20, 25, 0.95);
    border-bottom-color: rgba(255, 255, 255, 0.05);
  }

  :global(html[data-theme="dark"]) .header::after {
    background: linear-gradient(90deg, transparent 0%, rgba(var(--brand-600-rgb), 0.4) 50%, transparent 100%);
  }

  :global(html[data-theme="dark"]) .nav a {
    color: #e8e8e8;
  }

  :global(html[data-theme="dark"]) .control-btn {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.08);
  }

  :global(html[data-theme="dark"]) .control-btn:hover {
    background: rgba(255, 255, 255, 0.10);
    border-color: rgba(255, 255, 255, 0.15);
  }
</style>


