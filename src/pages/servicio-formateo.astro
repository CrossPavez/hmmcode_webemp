---
import Header from '../components/Header.astro';
import ServiceHardwareBanner from '../components/ServiceHardwareBanner.astro';
import Contact from '../components/Contact.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, maximum-scale=5.0, user-scalable=yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#0f4b2e" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />
    
    <title
      data-i18n-es="Formateo de Notebooks y Computadores a Domicilio con las 3B"
    <title>Formateo de Notebooks y Computadores</title>
    <meta name="description" content="Servicio de formateo de notebooks y computadores a domicilio." />
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Hmmcode - Formateo de Computadores",
      "image": "https://hmmcode.cl/logo.png",
      "description": "Servicio de formateo de notebooks y computadores a domicilio en Santiago",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Santiago",
        "addressLocality": "Santiago",
        "addressRegion": "RM",
        "postalCode": "",
        "addressCountry": "CL"
      },
      "priceRange": "$20.000-$40.000 CLP",
      "url": "https://hmmcode.cl/servicio-formateo",
      "telephone": "+56948645816"
    }
    </script>
  </head>
  
  <body>
    <Header />
    <ServiceHardwareBanner />
    <WhatsAppButton 
      phoneNumber="+56948645816"
      message="Hola Hmmcode, me interesa agendar un servicio"
      position="bottom-right"
      showLabel={true}
    />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>
